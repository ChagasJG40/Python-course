seg1 = float(input('Digite o primeiro segmento:'))
seg2 = float(input('Digite o segundo segmento:'))
seg3 = float(input('Digite o terceiro segmento:'))
if seg1 < seg2 + seg3 and seg2 < seg3 + seg1 and seg3 < seg2 + seg1:
    print('Os segmentos podem formar Triângulo ' , end='')
    if seg1 == seg2 == seg3:
        print('EQUILÁTERO')
    elif seg1 != seg2 != seg3 != seg1:
        print('ESCALENO')
    else:
        print('ISÓCELES')
else:
    print('Não podem formar um triângulo')
