print('{:=^40}'.format(' LUMIMAKER '))

compra = float(input('Qual o valor das compras: R$ '))
print(''' FORMAS DE PAGAMENTO
[1] à vista dinheiro/pix
[2] à vista no cartão
[3] 2x no cartão
[4] 3x ou mais no cartão''')
opção = int(input('Qual é a opção selecionada? '))
if opção == 1:
    total = compra - (compra * 10/100)
    print('Sua compra de r$ {:.2f} vai ficar R$ {:.2f} no final '.format(compra, total))
elif opção == 2:
    total = compra - (compra * 5/100)
    print('Sua compra de r$ {:.2f} vai ficar R$ {:.2f} no final '.format(compra, total))
elif opção == 3:
    total = compra
    parcela = compra / 2
    print('Sua compra será parcelada em 2x de R$ {:.2f} SEM JUROS'.format(parcela))
    print('Sua compra de R$ {:.2f} vai ficar no valor de R$ {:.2f} COM JUROS'.format(compra, total))
elif opção == 4:
    total = compra + (compra * 20 / 100)
    totalparc = int(input('Qual o total de parcelas: '))
    parcela = total / totalparc
    print('Sua compra será parcelada em {}X de R$ {:.2f} COM JUROS'.format(totalparc, parcela))
else:
    total = 0
    print('Opção inválida de pagamento. Tente novamente')
print('Sua compra de R$ {:.2f} vai ficar no valor de R$ {:.2f} COM JUROS'.format(compra, total))
